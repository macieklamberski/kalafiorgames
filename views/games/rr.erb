<% @title = "Robot Robuś" %>
<% @description = "You take a role of Robuś the Robot, who is working for SAC (Secret Agents Company). Your superior is Boss Bossy, who is responsible for assigning tasks to you. Game is divided into 5 missions with separate worlds and various dangers." %>
    <article role="main">
      <h1 class="heading heading-primary"><%= @title %></h1>
      <div class="formatting">
        <p><%= @description %></p>
      </div>
      <section id="downloads">
        <h2 class="outline">Downloads</h2>
        <ul class="downloads clearfix">
          <li class="installer">
            <a href="/download/robot-robus.exe">
              <i class="icon-installer"></i>
              <span>Installer (Windows)</span>
              <small class="minor">EXE, 1 MB</small>
            </a>
          </li>
        </ul>
      </section>
      <section id="media">
        <h2 class="outline">Media</h2>
        <ul class="media clearfix">
          <li><img src="<%= STATIC_URL %>/media/robot-robus/screen-1.png" alt="Screen #1"></li>
          <li><img src="<%= STATIC_URL %>/media/robot-robus/screen-3.png" alt="Screen #4"></li>
          <li><img src="<%= STATIC_URL %>/media/robot-robus/screen-4.png" alt="Screen #3"></li>
        </ul>
      </section>
    </article>
